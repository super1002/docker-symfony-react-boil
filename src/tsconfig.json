{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ]
  },
  "compileOnSave": true,
  "include": [
    "assets/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
